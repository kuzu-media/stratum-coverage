{
   "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "module": "CommonJS",               // This is for Node.js support
    "moduleResolution": "node",
    "esModuleInterop": true,            // This ensures compatibility between CommonJS and ESModules
    "outDir": "./dist",                 // Output folder
    "rootDir": "./src",                 // Your source folder
    "strict": true,                     // Enable strict type checking
    "skipLibCheck": true,               // Skip checking library files (for faster builds)
    "sourceMap": true,                  // Enable sourcemaps for debugging
    "baseUrl": ".",                     // Set the base URL for resolving paths
    "lib": ["es6", "dom"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}